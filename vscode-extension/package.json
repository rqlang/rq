{
  "name": "rq-language",
  "displayName": "RQ",
  "description": "Language support for RQ, a language for managing HTTP requests",
  "version": "0.1.0",
  "publisher": "rq-lang",
  "icon": "rq.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/rqlang/rq"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "rq",
    "http",
    "rest",
    "api",
    "request",
    "oauth2"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
  ],
  "contributes": {
    "languages": [
      {
        "id": "rq",
        "aliases": [
          "RQ",
          "rq"
        ],
        "extensions": [
          ".rq"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "rq",
        "scopeName": "source.rq",
        "path": "./syntaxes/rq.tmLanguage.json"
      },
      {
        "scopeName": "source.rq.basic",
        "path": "./syntaxes/basic-types.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "rq",
        "path": "./snippets/rq.code-snippets.json"
      }
    ],
    "commands": [
      {
        "command": "rq.getToken",
        "title": "Get Token",
        "category": "RQ"
      },
      {
        "command": "rq.clearOAuthCache",
        "title": "Clear OAuth Cache",
        "category": "RQ"
      },
      {
        "command": "rq.refreshRequests",
        "title": "Refresh Requests",
        "category": "RQ",
        "icon": "$(refresh)"
      },
      {
        "command": "rq.selectEnvironment",
        "title": "Select Environment",
        "category": "RQ",
        "icon": "$(server-environment)"
      },
      {
        "command": "rq.openRequestFile",
        "title": "Open Request File",
        "category": "RQ"
      },
      {
        "command": "rq.runRequest",
        "title": "Run Request",
        "category": "RQ",
        "icon": "$(play)"
      },
      {
        "command": "rq.runRequestWithVariables",
        "title": "Run Request with Variables",
        "category": "RQ",
        "icon": "$(run-with-deps)"
      }
    ],
    "configuration": {
      "title": "RQ",
      "properties": {
        "rq.useDevelopmentCli": {
          "type": "boolean",
          "default": false,
          "description": "Use local development CLI (cargo run) instead of installed rq binary"
        },
        "rq.cli.installOnPath": {
          "type": "boolean",
          "default": true,
          "description": "Install the rq CLI to a system-wide directory already on PATH (requires sudo on Linux/macOS). When false, the CLI is installed to a local directory and invoked by the extension directly."
        },
        "rq.cli.path": {
          "type": "string",
          "default": "",
          "description": "Absolute path to the rq CLI binary. Set automatically during installation. Leave empty to auto-detect from known install locations."
        }
      }
    },
    "authentication": [
      {
        "id": "rq-azure-oauth",
        "label": "RQ Azure OAuth"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "rq-explorer",
          "title": "RQ",
          "icon": "$(globe)"
        }
      ]
    },
    "views": {
      "rq-explorer": [
        {
          "id": "rqRequestExplorer",
          "name": "Requests",
          "icon": "$(globe)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "rq.selectEnvironment",
          "when": "view == rqRequestExplorer",
          "group": "navigation"
        },
        {
          "command": "rq.refreshRequests",
          "when": "view == rqRequestExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "rq.runRequest",
          "when": "view == rqRequestExplorer && viewItem == request",
          "group": "inline@1"
        },
        {
          "command": "rq.runRequestWithVariables",
          "when": "view == rqRequestExplorer && viewItem == request",
          "group": "inline@2"
        },
        {
          "command": "rq.openRequestFile",
          "when": "view == rqRequestExplorer && viewItem == request",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^18.19.130",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.0.0"
  },
  "license": "MIT"
}
